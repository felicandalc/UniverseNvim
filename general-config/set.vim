set number relativenumber
set smarttab
set cindent
set tabstop=2
set shiftwidth=2
set expandtab
set autochdir

" Disable bell
set visualbell

" Disable next line autocomment
autocmd BufNewFile,BufRead * setlocal formatoptions-=c formatoptions-=r formatoptions-=o

" Split always to right
set splitright

" Prevent line break
set nowrap
