{
	"languageserver": {
		"go": {
			"command": "gopls",
			"rootPatterns": ["go.mod"],
			"trace.server": "verbose",
			"filetypes": ["go"]
		}
	},
	"graphql": {
		"command": "graphql-lsp",
		"args": ["server", "-m", "stream"],
		"filetypes": ["typescript", "typescriptreact", "graphql", "javascript", "golang"]
	}
}
